// Prisma Schema
// https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// EXAMPLE MODEL - Replace with your own
// ===========================================

model Item {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      Status   @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  ACTIVE
  INACTIVE
  ARCHIVED
}

// ===========================================
// Add your models below
// ===========================================

model User {
  id                     String                  @id @default(cuid())
  name                   String
  email                  String?                 @unique
  passwordHash           String?
  startWeight            Float
  goalWeight             Float?
  weightUnit             WeightUnit
  medication             Medication
  injectionDay           Int                     // 0 = Monday, 6 = Sunday
  currentDosage          Decimal?                @db.Decimal(4, 2) // Current medication dosage in mg
  height                 Int?                    // Height in centimeters (for BMI calculation)
  expoPushToken          String?                 // Expo push notification token
  pushTokenPlatform      PushTokenPlatform?      // ios or android
  pushTokenUpdatedAt     DateTime?               // When the push token was last updated
  dosingMode             DosingMode              @default(STANDARD)
  penStrengthMg          Decimal?                @db.Decimal(5, 2) // Pen strength in mg (for microdosing)
  doseAmountMg           Decimal?                @db.Decimal(5, 2) // Dose amount in mg (for microdosing)
  dosesPerPen            Int                     @default(4)       // Number of doses per pen
  tracksGoldenDose       Boolean                 @default(false)   // Whether user tracks golden dose
  currentDoseInPen       Int                     @default(1)       // Current dose position (1-based)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  weighIns               WeighIn[]
  injections             Injection[]
  dailyHabits            DailyHabit[]
  sessions               Session[]
  notificationPreference NotificationPreference?
}

enum PushTokenPlatform {
  ios
  android
}

enum DosingMode {
  STANDARD
  MICRODOSE
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

model WeighIn {
  id        String   @id @default(cuid())
  userId    String
  weight    Float
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

enum WeightUnit {
  kg
  lbs
}

enum Medication {
  OZEMPIC
  WEGOVY
  MOUNJARO
  ZEPBOUND
  OTHER
}

enum InjectionSite {
  ABDOMEN_LEFT
  ABDOMEN_RIGHT
  THIGH_LEFT
  THIGH_RIGHT
  UPPER_ARM_LEFT
  UPPER_ARM_RIGHT
}

model Injection {
  id           String        @id @default(cuid())
  userId       String
  date         DateTime      @default(now())
  site         InjectionSite
  doseNumber   Int           @default(1)
  dosageMg     Decimal?      @db.Decimal(4, 2) // Medication dosage at time of injection
  isGoldenDose Boolean       @default(false)   // Whether this was a golden dose (leftover medication)
  notes        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model DailyHabit {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @db.Date
  water     Boolean  @default(false)
  nutrition Boolean  @default(false)
  exercise  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model NotificationPreference {
  id                 String   @id @default(cuid())
  userId             String   @unique
  injectionReminder  Boolean  @default(true)
  weighInReminder    Boolean  @default(true)
  habitReminder      Boolean  @default(false)
  reminderTime       String   @default("09:00")
  habitReminderTime  String   @default("20:00")
  timezone           String   @default("Europe/London")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum BetaPlatform {
  IOS
  ANDROID
}

model BetaTester {
  id        String       @id @default(cuid())
  email     String       @unique
  platform  BetaPlatform
  createdAt DateTime     @default(now())

  @@index([platform])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())

  @@index([createdAt])
}

// ===========================================
// Medication Configuration Tables
// ===========================================

model MedicationConfig {
  id                  String                    @id @default(cuid())
  code                String                    @unique // e.g., "OZEMPIC", "WEGOVY"
  name                String                    // Display name
  manufacturer        String?                   // e.g., "Novo Nordisk", null for "Other"
  supportsMicrodosing Boolean                   @default(true)
  sortOrder           Int                       @default(0)
  isActive            Boolean                   @default(true)
  createdAt           DateTime                  @default(now())
  updatedAt           DateTime                  @updatedAt
  dosages             MedicationDosage[]
  penStrengths        MedicationPenStrength[]

  @@index([code])
  @@index([isActive, sortOrder])
}

model MedicationDosage {
  id                 String           @id @default(cuid())
  medicationConfigId String
  dosageMg           Decimal          @db.Decimal(5, 2) // Dosage in mg
  sortOrder          Int              @default(0)
  createdAt          DateTime         @default(now())
  medicationConfig   MedicationConfig @relation(fields: [medicationConfigId], references: [id], onDelete: Cascade)

  @@unique([medicationConfigId, dosageMg])
  @@index([medicationConfigId, sortOrder])
}

model MedicationPenStrength {
  id                 String           @id @default(cuid())
  medicationConfigId String
  strengthMg         Decimal          @db.Decimal(5, 2) // Pen strength in mg
  sortOrder          Int              @default(0)
  createdAt          DateTime         @default(now())
  medicationConfig   MedicationConfig @relation(fields: [medicationConfigId], references: [id], onDelete: Cascade)

  @@unique([medicationConfigId, strengthMg])
  @@index([medicationConfigId, sortOrder])
}

model MicrodoseAmount {
  id        String   @id @default(cuid())
  amountMg  Decimal  @unique @db.Decimal(5, 2) // Microdose amount in mg
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@index([isActive, sortOrder])
}

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique // e.g., "defaultDosesPerPen"
  value     String   // Stored as string, parsed by application
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}
