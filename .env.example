# ===========================================
# Needled Environment Variables
# ===========================================

# Database
DB_PASSWORD=your_secure_database_password

# Prisma Database URL (for local development)
DATABASE_URL="postgresql://needled:your_secure_database_password@localhost:5467/needled"

# Application URL
NEXT_PUBLIC_APP_URL=https://needled.app

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=hello@needled.app

# Security Secrets (generate with: openssl rand -hex 32)
UNSUBSCRIBE_SECRET=your_unsubscribe_secret
CRON_SECRET=your_cron_secret

# ===========================================
# Production Only (nginx-proxy)
# ===========================================
PROD_DOMAIN=needled.app
LETSENCRYPT_DOMAIN=needled.app
LETSENCRYPT_EMAIL=admin@needled.app
